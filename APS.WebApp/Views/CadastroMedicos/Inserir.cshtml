@using APS.Dominio.Entities;
@model CadastroMedicos


<div id="main-container">
    <h1>Cadastre-se</h1>
    <form asp-action="InserirConfirmar" asp-controller="CadastroMedicos" method="POST">

        <div class="half-box spacing">
            <label for="Nome">Nome</label>
            <input asp-for="Nome" class="form-control" />
        </div>
        <div class="half-box">
            <label for="Sobrenome">Sobrenome</label>
            <input asp-for="Sobrenome" class="form-control" />
        </div>
        <div class="half-box spacing">
            <label for="CPF">CPF (Sem pontos e traços)</label>
            <input asp-for="CPF" class="form-control" />
        </div>


        <div class="half-box">
            <label for="Endereco">Endereço</label>
            <input asp-for="Endereco" class="form-control" />
        </div>
        <div class="full-box">
            <label for="Email">E-mail</label>
            <input asp-for="Email" class="form-control" />
        </div>
        <div class="half-box spacing">
            <label for="NomeClinica">Nome da Clinica</label>
            <input asp-for="NomeClinica" class="form-control" />
        </div>
        <div class="half-box spacing">
            <label for="Especializacao">Especializacao</label>
            <input asp-for="Especializacao" class="form-control" />
        </div>
        <div class="half-box spacing">
            <label for="Numero">Número de Telefone</label>
            <input asp-for="Numero" class="form-control" placeholder="(__) _____-____" />
        </div>

        <div class="half-box spacing">
            @Html.LabelFor(model => model.Sexo)
            @Html.DropDownListFor(model => model.Sexo, (List<SelectListItem>)ViewBag.SexosDisponiveis, "-- Selecione --", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Sexo)
        </div>

        <div>
            <input type="checkbox" name="agreement" id="agreement">
            <label for="agreement" id="agreement-label">Eu li e aceito os <a href="#">termos de uso</a></label>
        </div>
        <hr />
        <div class="full-box">
            <input id="btn-submit" type="submit" value="Registrar">
        </div>
    </form>
</div>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        var form = document.querySelector('form');

        form.addEventListener('submit', function (event) {
            var agreementCheckbox = document.getElementById('agreement');

            if (!agreementCheckbox.checked) {
                alert('Você precisa aceitar os termos de uso para continuar.');
                event.preventDefault(); // Impede o envio do formulário
            }
        });
    });
</script>


<p class="error-validation template"> </p>
