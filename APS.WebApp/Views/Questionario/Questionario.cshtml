    <script>
        let perguntas = document.querySelectorAll('.question');
        let indiceAtual = 0;
        let respostasSim = 0;
        let respostasNao = 0;

        function passarProximaPergunta() {
            const respostaAtual = document.querySelector(`input[name="q${indiceAtual + 1}"]:checked`);

            if (respostaAtual) {
                if (respostaAtual.value === 'sim') {
                    respostasSim++;
                } else {
                    respostasNao++;
                }

                perguntas[indiceAtual].style.display = 'none';
                indiceAtual++;

                if (indiceAtual < perguntas.length) {
                    perguntas[indiceAtual].style.display = 'block';
                } else {
                    mostrarResultados();
                }
            } else {
                alert('Por favor, selecione uma resposta.');
            }
        }

