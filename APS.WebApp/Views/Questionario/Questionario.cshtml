        // }


        function verificarSoropositivo() {
            // Modifique o número conforme necessário com base na quantidade de perguntas "Sim" necessárias
            const limiteRespostasSim = 9;
            const resultadoFinalElement = document.getElementById('resultado-final');

            if (respostasSim >= limiteRespostasSim) {
                resultadoFinalElement.innerText = 'Você tem grande probabilidade de ser soropositivo. Busque ajuda IMEDIATAMENTE!, Procure um dos nosso especialistas e marque uma consulta através de uns dos contatos no nosso site';
            } else {
                resultadoFinalElement.innerText = 'Você não é soropositivo. Mas busque um especialista para diagnosticar com precisão o seu caso. Caso queira, procure um dos nosso especialista';
            }

            // Centralizar o texto na tela
            resultadoFinalElement.style.textAlign = 'center';
            resultadoFinalElement.style.marginTop = '20px'; /* Ajuste conforme necessário para espaçamento superior */
        }


        // Função para mostrar resultados e verificar soropositividade
        function mostrarResultados() {
            document.getElementById('imagem-resultado').style.display = 'block';

            document.getElementById('resultado-title').style.display = 'block';
             document.getElementById('resultado-titles').style.display = 'block';
         
            document.getElementById('question-container').style.display = 'none';
            document.getElementById('resultado').style.display = 'block';
            document.getElementById('respostas-sim').innerText = `Voce respondeu "Sim" ${respostasSim} vezes`; document.getElementById('respostas-nao').innerText = `e "Não" ${respostasNao} vezes`;

            document.getElementById('resultado').style.display = 'flex';
            document.getElementById('resultado').style.flexDirection = 'column';
            document.getElementById('resultado').style.alignItems = 'center';
            document.getElementById('resultado').style.justifyContent = 'center';
            document.getElementById('resultado').style.textAlign = 'center';
            document.getElementById('resultado').style.height = '100vh';
            // Chame a função para verificar soropositividade
            verificarSoropositivo();
            document.querySelector('h3.animated').style.display = 'none';
            document.querySelector('h1.animated').style.display = 'none';
            document.querySelector('button[onclick="voltarPergunta()"]').style.display = 'none';
            document.querySelector('button[onclick="passarProximaPergunta()"]').style.display = 'none';
        }

        function voltarPergunta() {
            if (indiceAtual > 0) {
                perguntas[indiceAtual].style.display = 'none';
                indiceAtual--;

                perguntas[indiceAtual].style.display = 'block';
            } else {
                alert('Você está na primeira pergunta.');
            }
        }
