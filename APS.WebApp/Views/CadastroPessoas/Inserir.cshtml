@using APS.Dominio.Entities;
@model CadastroPessoas


    <div id="main-container">
    <h1><strong>Cadastre-se para entrar</strong></h1>
        <form asp-action="InserirConfirmar" asp-controller="CadastroPessoas" method="POST">
        
            <div class="half-box spacing">
                <label for="Nome">Nome</label>
            <input asp-for="Nome" class="form-control" placeholder="Digite seu nome" />
            </div>
            <div class="half-box">
                <label for="Sobrenome">Sobrenome</label>
            <input asp-for="Sobrenome" class="form-control" placeholder="Digite seu sobrenome" />
            </div>
            <div class="half-box spacing">
                <label for="CPF">CPF (Sem pontos e traços)</label>
            <input asp-for="CPF" class="form-control" placeholder="Digite seu CPF" />
            </div>
           

            <div class="half-box">
                <label for="Endereco">Endereço</label>
            <input asp-for="Endereco" class="form-control" placeholder="Digite seu endereço" />
            </div>
            <div class="full-box">
                <label for="Email">E-mail</label>
            <input asp-for="Email" class="form-control" placeholder="Digite seu email" />
            </div>
        <div class="half-box spacing">
            <label for="Senha">Senha</label>
            <input asp-for="Senha" type="password" class="form-control" placeholder="Digite sua senha" />
        </div>

            <div class="half-box spacing">
                @Html.LabelFor(model => model.Sexo)
                @Html.DropDownListFor(model => model.Sexo, (List<SelectListItem>)ViewBag.SexosDisponiveis, "-- Selecione --", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Sexo)
            </div>

            <div>
                <input type="checkbox" name="agreement" id="agreement">
                <label for="agreement" id="agreement-label">Eu li e aceito os <a href="#">termos de uso</a></label>
            </div>
            <hr />
            <div class="full-box">
                <input id="btn-submit" type="submit" value="Registrar">
            </div>
        </form>
    </div>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        var form = document.querySelector('form');

        form.addEventListener('submit', function (event) {
            var agreementCheckbox = document.getElementById('agreement');

            if (!agreementCheckbox.checked) {
                alert('Você precisa aceitar os termos de uso para continuar.');
                event.preventDefault(); // Impede o envio do formulário
            }
        });
    });
</script>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        var form = document.querySelector('form');

        form.addEventListener('submit', function (event) {
            var cpfInput = document.getElementById('CPF');
            var cpfValue = cpfInput.value.replace(/\D/g, ''); // Remove caracteres não numéricos

            if (cpfValue.length !== 11 || isNaN(cpfValue)) {
                alert('CPF inválido. Por favor, insira um CPF com 11 dígitos numéricos.');
                event.preventDefault(); // Impede o envio do formulário
            }
        });
    });
</script>


    <p class="error-validation template"> </p>
